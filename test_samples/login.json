{
    "id": "login",
    "main": {
        "steps": {
            "start": {
                "type": "perform",
                "action": "navigate",
                "args": {
                    "url": "${state.server}/"
                },
                "next_step": "click_development_azure_account_button"
            },
            "click_development_azure_account_button": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "li[name='development_azure_account']"
                },
                "next_step": "wait_for_login_tab_to_open_two_items"
            },
            "wait_for_login_tab_to_open_two_items": {
                "type": "wait",
                "action": "window_count",
                "args": {
                    "count": 2
                },
                "next_step": "swap_to_new_tab"
            },
            "swap_to_new_tab": {
                "type": "perform",
                "action": "switch_to_tab",
                "args": {
                    "index": 1
                },
                "next_step": "fill_in_user_name"
            },
            "fill_in_user_name": {
                "type": "perform",
                "action": "type_text",
                "args": {
                    "query": "input[name='loginfmt']",
                    "value": "test@pragmadeveloper.onmicrosoft.com"
                },
                "next_step": "press_enter_user_name"
            },
            "press_enter_user_name": {
                "type": "perform",
                "action": "press_key",
                "args": {
                    "query": "input[name='loginfmt']",
                    "key": "RETURN"
                },
                "next_step": "wait_for_password"
            },
            "wait_for_password": {
                "type": "wait",
                "action": "time",
                "args": {
                    "timeout": 1
                },
                "next_step": "fill_in_password"
            },
            "fill_in_password": {
                "type": "perform",
                "action": "type_text",
                "args": {
                    "query": "input#i0118",
                    "value": "NtHe7t2EFLqFbM"
                },
                "next_step": "press_enter_password"
            },
            "press_enter_password": {
                "type": "perform",
                "action": "press_key",
                "args": {
                    "query": "input#i0118",
                    "key": "RETURN"
                },
                "next_step": "wait_for_remember_me"
            },
            "wait_for_remember_me": {
                "type": "wait",
                "action": "time",
                "args": {
                    "timeout": 2
                },
                "next_step": "click_on_remember_me"
            },
            "click_on_remember_me": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "#idSIButton9"
                },
                "next_step": "wait_for_one_window"
            },
            "wait_for_one_window": {
                "type": "wait",
                "action": "window_count",
                "args": {
                    "count": 1
                },
                "next_step": "switch_to_default_view_again"
            },
            "switch_to_default_view_again": {
                "type": "perform",
                "action": "switch_to_tab",
                "args": {
                    "index": 0
                },
                "next_step": "wait_for_main_view"
            },
            "wait_for_main_view": {
                "type": "wait",
                "action": "element",
                "args": {
                    "id": "main-view"
                },
                "next_step": "wait_for_idle_cpu"
            },
            "wait_for_idle_cpu": {
                "type": "wait",
                "action": "idle"
            }
        }
    }
}