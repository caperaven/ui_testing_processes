{
    "id": "conditions_tests",

    "sequences": [
        {
            "caption": "main",
            "process": "main"
        },
        {
            "caption": "validate_start_values",
            "process": "validate_start_values"
        }
    ],

    "main": {
        "steps": {
            "start": {
                "type": "perform",
                "action": "navigate",
                "args": {
                    "url": "${state.server}/#conditions"
                }
            }
        },

        "assert_has_attribute": {

        }
    },

    "validate_start_values": {
        "steps": {
            "start": {
                "type": "assert",
                "action": "has_not_attribute",
                "args": {
                    "query": "#attributes1",
                    "attr": "disabled"
                },
                "next_step": "attributes2"
            },
            "attributes2": {
                "type": "assert",
                "action": "attribute_eq",
                "args": {
                    "query": "#attributes2",
                    "attr": "data-valid",
                    "value": "true"
                },
                "next_step": "classlist1"
            },
            "classlist1": {
                "type": "assert",
                "action": "has_not_class",
                "args": {
                    "query": "#classlist1",
                    "class": "red"
                },
                "next_step": "classlist2"
            },
            "classlist2": {
                "type": "assert",
                "action": "attribute_eq",
                "args": {
                    "query": "#classlist2",
                    "attr": "class",
                    "value": "blue"
                },
                "next_step": "style1"
            },
            "style1": {
                "type": "assert",
                "action": "has_not_attribute",
                "args": {
                    "query": "#style1",
                    "attr": "style"
                },
                "next_step": "style2"
            },
            "style2": {
                "type": "assert",
                "action": "attribute_eq",
                "args": {
                    "query": "#style2",
                    "attr": "style",
                    "value": "color: blue;"
                },
                "next_step": "case1"
            },
            "case1": {
                "type": "assert",
                "action": "attribute_eq",
                "args": {
                    "query": "#case1",
                    "attr": "style",
                    "value": "color: green;"
                },
                "next_step": "case2"
            },
            "case2": {
                "type": "assert",
                "action": "attribute_eq",
                "args": {
                    "query": "#case2",
                    "attr": "class",
                    "value": "green"
                },
                "next_step": "case3"
            },
            "case3": {
                "type": "assert",
                "action": "attribute_eq",
                "args": {
                    "query": "#case3",
                    "attr": "data-value",
                    "value": "green"
                }
            }
        }
    },
    
