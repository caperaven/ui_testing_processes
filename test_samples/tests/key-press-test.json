{
  "id": "key_presses",
  "main": {
    "steps": {
      "start": {
        "type": "perform",
        "action": "navigate",
        "args": {
          "url": "${state.server}/#dashboard/WorkOrder"
        },
        "next_step": "wait_for_idle_cpu"
      },
      "wait_for_idle_cpu": {
        "type": "wait",
        "action": "idle",
        "next_step": "wait_for_dashboard_grid_to_be_ready"
      },
      "wait_for_dashboard_grid_to_be_ready": {
        "type": "wait",
        "action": "attribute",
        "args": {
          "id": "dashboard-grid",
          "attr": "status",
          "value": "ready"
        },
        "next_step": "open_create_screen"
      },
      "open_create_screen": {
        "type": "perform",
        "action": "click",
        "args": {
          "query": "pragma-panel-bar #create"
        },
        "next_step": "wait_for_create_screen_to_be_ready"
      },
      "wait_for_create_screen_to_be_ready": {
        "type": "wait",
        "action": "time",
        "args": {
          "timeout": 2
        },
        "next_step": "type_text_in_description"
      },
      "type_text_in_description": {
        "type": "perform",
        "action": "type_text",
        "args": {
          "query": "dynamic-create[data-template='WorkOrderCreate'] #lbl-description",
          "value": "test-aw"
        },
        "next_step": "press_single_key"
      },
      "press_single_key": {
        "type": "perform",
        "action": "press_key",
        "args": {
          "query": "dynamic-create[data-template='WorkOrderCreate'] #lbl-description",
          "key": "RETURN"
        },
        "next_step": "type_additional_text_in_description"
      },
      "type_additional_text_in_description": {
        "type": "perform",
        "action": "type_text",
        "args": {
          "query": "dynamic-create[data-template='WorkOrderCreate'] #lbl-description",
          "value": "this is some more text"
        },
        "next_step": "press_multiple_keys"
      },
      "press_multiple_keys": {
        "type": "perform",
        "action": "press_key",
        "args": {
          "query": "dynamic-create[data-template='WorkOrderCreate'] #lbl-description",
          "key": "CONTROL+A"
        },
        "next_step": "wait_for_selection"
      },
      "wait_for_selection": {
        "type": "wait",
        "action": "time",
        "args": {
          "timeout": 3
        },
        "next_step": "press_delete_key"
      },
      "press_delete_key": {
        "type": "perform",
        "action": "press_key",
        "args": {
          "query": "dynamic-create[data-template='WorkOrderCreate'] #lbl-description",
          "key": "DELETE"
        },
        "next_step": "type_final_text_in_description"
      },
      "type_final_text_in_description": {
        "type": "perform",
        "action": "type_text",
        "args": {
          "query": "dynamic-create[data-template='WorkOrderCreate'] #lbl-description",
          "value": "SUCCESS"
        },
        "next_step": "wait_for_final_text"
      },
      "wait_for_final_text": {
        "type": "wait",
        "action": "time",
        "args": {
          "timeout": 3
        }
      }
    }
  }
}