{
  "id": "open_workorder_overview",

  "main": {
    "steps": {
      "start": {
        "type": "perform",
        "action": "navigate",
        "args": {
          "url": "${state.server}/#dashboard/WorkOrder"
        },
        "next_step": "wait_for_idle_cpu"
      },

      "wait_for_idle_cpu": {
        "type": "wait",
        "action": "idle",
        "next_step": "wait_for_dashboard_grid_to_be_ready"
      },

      "wait_for_dashboard_grid_to_be_ready": {
        "type": "wait",
        "action": "attribute",
        "args": {
          "id": "dashboard-grid",
          "attr": "status",
          "value": "ready",
          "timeout": 30
        },
        "next_step": "click_btnOverview"
      },

      "click_btnOverview": {
        "type": "perform",
        "action": "click",
        "args": {
          "id": "btnOverview"
        },
        "next_step": "wait_right_panel_to_open"
      },

      "wait_right_panel_to_open": {
        "type": "wait",
        "action": "attribute",
        "args": {
          "query": ".dashboard [slot='right'] pragma-pager",
          "attr": "status",
          "value": "ready",
          "timeout": 30
        }
      }
    }
  }
}